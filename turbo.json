{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start:dev": {
      "cache": false,
      "persistent": true
    },
    "node": {
      "cache": false,
      "persistent": true
    },
    "dev:with-deploy": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "packages/ui/dist/**",
        "packages/lib/dist/**",
        "apps/frontend/.next/**",
        "apps/backend/dist/**",
        "apps/contracts/artifacts/**",
        "apps/contracts/cache/**",
        "apps/contracts/typechain-types/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "compile": {
      "outputs": [
        "apps/contracts/artifacts/**",
        "apps/contracts/cache/**",
        "apps/contracts/typechain-types/**"
      ]
    },
    "deploy:local": {
      "cache": false
    },
    "deploy:sepolia": {
      "cache": false
    },
    "export:abi:local": {
      "cache": false
    },
    "export:abi:sepolia": {
      "cache": false
    }
  }
}
